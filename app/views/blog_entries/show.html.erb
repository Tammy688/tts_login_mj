<h1>Listing blog_comments</h1>

<table>
  <thead>
    <tr>
      <th>Entry text</th>
      <th>User</th>
      <th>Entry date</th>
      <th>Blog entry</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_comments.each do |blog_comment| %>
      <tr>
        <td><%= blog_comment.entry_text %></td>
        <td><%= blog_comment.user_id %></td>
        <td><%= blog_comment.entry_date %></td>
        <td><%= blog_comment.blog_entry_id %></td>
        <td><%= link_to 'Show', blog_comment %></td>
        <td><%= link_to 'Edit', edit_blog_comment_path(blog_comment) %></td>
        <td><%= link_to 'Destroy', blog_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

